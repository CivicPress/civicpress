{
  "name": "@civicpress/core",
  "version": "1.0.0",
  "description": "CivicPress Core Platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run build:copy-schemas",
    "build:copy-schemas": "mkdir -p dist/schemas/record-type-schemas && cp -r src/schemas/*.json dist/schemas/ 2>/dev/null || true && cp -r src/schemas/record-type-schemas/*.json dist/schemas/record-type-schemas/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "dev:build": "tsc && tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "civic",
    "government",
    "core"
  ],
  "author": "CivicPress Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "@sendgrid/mail": "8.1.5",
    "@types/jsonwebtoken": "9.0.10",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "9.0.2",
    "nodemailer": "7.0.5",
    "octokit": "^5.0.3",
    "simple-git": "^3.28.0",
    "sqlite3": "5.1.7",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "eslint": "9.30.1",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@10.12.4"
}
