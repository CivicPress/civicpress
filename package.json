{
  "name": "civicpress",
  "version": "1.0.0",
  "description": "CivicPress project",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "cd modules/api && pnpm run dev",
    "dev:api": "cd modules/api && pnpm run dev",
    "dev:api:watch": "cd modules/api && pnpm run dev:watch",
    "dev:ui": "cd modules/ui && pnpm run dev",
    "dev:serve": "cd modules/serve && pnpm run dev",
    "dev:all": "concurrently \"pnpm run dev:api\" \"pnpm run dev:ui\"",
    "dev:all:watch": "concurrently \"pnpm run dev:api:watch\" \"pnpm run dev:ui\"",
    "dev:parallel": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "build:cli": "cd cli && pnpm run build",
    "build:api": "cd modules/api && pnpm run build",
    "build:ui": "cd modules/ui && pnpm run build",
    "build:serve": "cd modules/serve && pnpm run build",
    "build:core": "cd core && pnpm run build",
    "preview:serve": "cd modules/serve && pnpm run preview",
    "preview:ui": "cd modules/ui && pnpm run preview",
    "start:api": "cd modules/api && pnpm run start",
    "start:serve": "cd modules/serve && pnpm run start",
    "format": "prettier --write \"**/*.{md,json,js,ts,jsx,tsx}\"",
    "format:check": "prettier --check \"**/*.{md,json,js,ts,jsx,tsx}\"",
    "spec:format": "markdownlint --fix .civic/specs/*.md && prettier --write .civic/specs/*.md --prose-wrap always",
    "spec:format:check": "markdownlint .civic/specs/*.md && prettier --check .civic/specs/*.md",
    "spec:validate": "node .civic/tools/validate-specs.js",
    "spec:check-deps": "node .civic/tools/check-deps.js",
    "spec:list": "node .civic/tools/list-specs.js",
    "spec:check": "pnpm run spec:validate && pnpm run spec:check-deps",
    "spec:all": "pnpm run spec:format && pnpm run spec:validate && pnpm run spec:check-deps && pnpm run spec:list",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/nodemailer": "6.4.17",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "concurrently": "^8.2.2",
    "js-yaml": "4.1.0",
    "markdownlint-cli": "^0.37.0",
    "prettier": "^3.0.0",
    "vitest": "3.2.4"
  }
}
