{
  "name": "@civicpress/storage",
  "version": "1.0.0",
  "description": "CivicPress Storage Module - File and media management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "civicpress",
    "storage",
    "files",
    "media"
  ],
  "author": "CivicPress Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "3.879.0",
    "@azure/storage-blob": "12.28.0",
    "@google-cloud/storage": "^7.15.0",
    "@civicpress/core": "workspace:*",
    "fs-extra": "^11.2.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "p-limit": "7.2.0",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.4"
}
