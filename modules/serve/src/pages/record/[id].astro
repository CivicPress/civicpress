---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  // This would be populated at build time with actual record IDs
  // For now, we'll handle this dynamically
  return [];
}

const { id } = Astro.params;
const API_BASE = 'http://localhost:3000';
let record = null;
let error = null;

try {
  const response = await fetch(`${API_BASE}/api/records/${id}`);
  if (response.ok) {
    const data = await response.json();
    record = data.data?.record;
  } else {
    error = `Failed to fetch record: ${response.status}`;
  }
} catch (err) {
  error = `Error connecting to API: ${err.message}`;
}
---

<Layout title={record ? `${record.title} - CivicPress` : "Record Not Found - CivicPress"}>
  {error ? (
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Error Loading Record</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>{error}</p>
          </div>
        </div>
      </div>
    </div>
  ) : record ? (
    <div class="max-w-4xl mx-auto">
      <!-- Breadcrumb -->
      <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-civic-600">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
              </svg>
              Records
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">{record.title}</span>
            </div>
          </li>
        </ol>
      </nav>

      <!-- Record Header -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <div class="flex items-center space-x-3 mb-2">
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                record.type === 'bylaw' ? 'bg-blue-100 text-blue-800' :
                record.type === 'policy' ? 'bg-green-100 text-green-800' :
                record.type === 'resolution' ? 'bg-purple-100 text-purple-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {record.type}
              </span>
              <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                record.status === 'approved' ? 'bg-green-100 text-green-800' :
                record.status === 'draft' ? 'bg-yellow-100 text-yellow-800' :
                record.status === 'proposed' ? 'bg-orange-100 text-orange-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {record.status}
              </span>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">{record.title}</h1>
            {record.description && (
              <p class="text-lg text-gray-600">{record.description}</p>
            )}
          </div>
        </div>

        <!-- Metadata -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pt-4 border-t border-gray-200">
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="text-sm text-gray-900">{record.created_at ? new Date(record.created_at).toLocaleDateString() : 'Unknown'}</dd>
          </div>
          {record.updated_at && (
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
              <dd class="text-sm text-gray-900">{new Date(record.updated_at).toLocaleDateString()}</dd>
            </div>
          )}
          {record.author && (
            <div>
              <dt class="text-sm font-medium text-gray-500">Author</dt>
              <dd class="text-sm text-gray-900">{record.author}</dd>
            </div>
          )}
        </div>
      </div>

      <!-- Record Content -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Content</h2>
        {record.content ? (
          <div class="prose max-w-none">
            <div set:html={record.content} />
          </div>
        ) : (
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No content available</h3>
            <p class="mt-1 text-sm text-gray-500">This record doesn't have any content yet.</p>
          </div>
        )}
      </div>
    </div>
  ) : (
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Record not found</h3>
      <p class="mt-1 text-sm text-gray-500">The record you're looking for doesn't exist.</p>
      <div class="mt-6">
        <a href="/" class="text-civic-600 hover:text-civic-700 font-medium">
          ‚Üê Back to Records
        </a>
      </div>
    </div>
  )}
</Layout> 