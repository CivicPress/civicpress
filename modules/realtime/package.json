{
  "name": "@civicpress/realtime",
  "version": "1.0.0",
  "description": "CivicPress Realtime Module - WebSocket-based collaborative editing and presence",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./realtime-services": {
      "types": "./dist/realtime-services.d.ts",
      "import": "./dist/realtime-services.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:watch": "pnpm run build && concurrently -n \"BUILD,SERVER\" -c \"yellow,cyan\" \"tsc --watch\" \"nodemon --watch dist --ext js,mjs --delay 3 --ignore 'dist/**/*.d.ts' --ignore 'dist/**/*.map' --exec 'node standalone-realtime.mjs'\"",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "civicpress",
    "realtime",
    "websocket",
    "collaboration",
    "yjs"
  ],
  "author": "CivicPress Team",
  "license": "MIT",
  "dependencies": {
    "@civicpress/core": "workspace:*",
    "ws": "^8.18.0",
    "yjs": "^13.6.10",
    "y-protocols": "^1.0.6",
    "yaml": "^2.6.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "nodemon": "^3.0.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "yaml": "^2.6.1"
  },
  "packageManager": "pnpm@10.12.4"
}
