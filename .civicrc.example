# CivicPress System Configuration
# Copy this file to .civicrc and customize for your deployment
# The .civicrc file is machine-specific and should not be committed to Git
#
# Note: Platform configuration (modules, record_types, etc.) should be in
# data/.civic/config.yml, not in this file. Organization details should be
# in data/.civic/org-config.yml

version: '1.0.0'
dataDir: './data'
default_role: clerk
hooks:
  enabled: true
workflows:
  enabled: true
audit:
  enabled: true
database:
  type: sqlite
  sqlite:
    file: './.system-data/civic.db'
created: '2025-01-01T00:00:00.000Z'

