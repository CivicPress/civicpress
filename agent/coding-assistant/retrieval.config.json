{
  "include": [
    "agent/coding-assistant/project.yml",
    "agent/coding-assistant/glossary.yml",
    "agent/coding-assistant/conventions.md",
    "agent/coding-assistant/prompts/**/*.md",
    "agent/coding-assistant/registries/**/*.yml",
    "agent/context.md",
    "agent/goals.md",
    "agent/testing-decisions.md",
